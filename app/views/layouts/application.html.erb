<!DOCTYPE html>
<html>
  <head>
    <title>Theresa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd">
    <div class = "row">
      <a class="navbar-brand" href="/">
        <img src="https://pbs.twimg.com/profile_images/1006882060798185473/hKitNgVG_400x400.jpg" width="30" height="30" alt="">
      </a>
      <div class="col-sm-1">
      <a type="button" class="btn btn-default" id= "CreateWalk" href="/walk/new">Create Walk</a>
      </div>
      <div class="col-sm-1">
      <a type="button" class="btn btn-default" id= "CreateTrip" href="/trips/new">Create Trip</a>
      </div>

      <% if  session[:user_id] == nil %>
      <%= session[:user_id] %>
      <div class="col-sm-1">
      <a type="button" class="btn btn-default" id= "login" href="/login">Log in</a>
      </div>
      <div class="col-sm-1">
      <a type="button" class="btn btn-default" id= "signup" href="<%= new_user_path %>">Sign up</a>
      </div>
      <% else %>
      <div class="col-sm-1">
      <a type="button" class="btn btn-default" id= "MyTrip" href="/trips/mytrip">My Trips</a>
      </div>
      <div class="col-sm-1">
      <a type="button" class="btn btn-default" id= "logout" href="/logout">Log out</a>
      </div>
      <% end %>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
